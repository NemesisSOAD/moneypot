<metal:main metal:define-macro="master">
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
  <title metal:define-slot='title'>fa.bootstrap</title>
  <meta charset="utf-8"/>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script type="text/javascript" metal:define-slot="javascript"></script>
  <link metal:define-slot="css"></link>
</head>
<body style="padding-top: 90px">
<div tal:condition="exists: view.logged_in"> 
    <span tal:define="global logged_in view.logged_in"></span>
</div>

  <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="${request.application_url}">Moneypot</a>
          <ul class="nav">
            <li><a href="${request.application_url}">New Pot</a></li>
            <li tal:condition="logged_in">
                <a href="${request.route_url('overview')}">My Pots</a>
            </li>
            <!--!
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">First section</a>
                <ul class="dropdown-menu">
                    <li><a href="${request.application_url}/section1">section 1</a></li>
                    <li><a href="${request.application_url}/section2">section 2</a></li>
                    <li><a href="${request.application_url}/section3">section 3</a></li>
                </ul>
                </li>
                -->
            <li tal:condition="logged_in" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i>&nbsp;<span tal:replace="logged_in">User</span></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="${request.route_url('logout')}">Logout</a>
                    </li>
                </ul>
            </li>
            <li tal:condition="not logged_in">
                <a href="${request.route_url('login')}">Login</a>
            </li>
          </ul>
        </div>
      </div>
  </div>
  <div class="container">
      <div class="content">
        <div class="row" metal:define-slot="messages">
            <div class="span12" tal:repeat="flashmessage request.session.pop_flash()">
                <div class="well" tal:content="structure: flashmessage"></div>
            </div>
        </div>
          <metal:main metal:define-slot="body"/>
      </div>
  </div>
</body>
</html>
</metal:main>
